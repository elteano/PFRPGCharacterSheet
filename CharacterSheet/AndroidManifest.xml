<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.elteano.charactersheet"
    android:installLocation="auto"
    android:versionCode="7"
    android:versionName="1.3.1" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <!--
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    -->
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:name="org.elteano.charactersheet.PFRPGCharacterSheet"
        android:allowBackup="true"
        android:icon="@drawable/licon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="org.elteano.charactersheet.CharacterSheetActivity"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name="org.elteano.charactersheet.CounterEditActivity" />
        <activity android:name="org.elteano.charactersheet.ModValueEditActivity" />
        <activity
            android:name="org.elteano.charactersheet.FeatEditActivity"
            android:label="@string/title_activity_feat_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSheetActivity" />
        </activity>
        <activity
            android:name="org.elteano.charactersheet.CFeatEditActivity"
            android:label="@string/title_activity_cfeat_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSheetActivity" />
        </activity>
        <activity
            android:name="org.elteano.charactersheet.SkillEditActivity"
            android:label="@string/title_activity_skill_edit" >
        </activity>
        <activity
            android:name="org.elteano.charactersheet.ItemEditActivity"
            android:label="@string/title_activity_item_edit" >
        </activity>
        <activity android:name="org.elteano.charactersheet.SaveEditActivity" >
        </activity>
        <activity
            android:name="org.elteano.charactersheet.AttackEditActivity"
            android:label="@string/title_activity_attack_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSheetActivity" />
        </activity>
        <activity
            android:name="org.elteano.charactersheet.ACEditActivity"
            android:label="@string/title_activity_acedit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSheetActivity" />
        </activity>
        <activity
            android:name="org.elteano.charactersheet.SpellEditActivity"
            android:label="@string/title_activity_spell_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="CharacterSheetActivity" />
        </activity>
        <activity
            android:name="org.elteano.charactersheet.CharacterSelectActivity"
            android:label="@string/app_name" >

            <!-- android:label="@string/title_activity_character_select" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.elteano.charactersheet.CMBEditActivity"
            android:label="@string/title_activity_cmbedit"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="org.elteano.charactersheet.CharacterSendActivity"
            android:label="@string/title_activity_character_send" >
        </activity>
        <activity
            android:name="org.elteano.charactersheet.CharacterReceiveActivity"
            android:label="@string/title_activity_character_receive" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSelectActivity" />
        </activity>
        <activity
            android:name="org.elteano.charactersheet.HPEditActivity"
            android:label="@string/title_activity_hpedit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSheetActivity" />
        </activity>
        <activity
            android:name="org.elteano.charactersheet.BluetoothTransferActivity"
            android:label="@string/title_activity_bluetooth_transfer" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSelectActivity" />
        </activity>
        <activity
            android:name="org.elteano.charactersheet.BluetoothSendActivity"
            android:label="@string/title_activity_bluetooth_send" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSelectActivity" />
        </activity>
    </application>

</manifest>