<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.elteano.charactersheet"
    android:installLocation="auto"
    android:versionCode="5"
    android:versionName="1.2.1" >

    <uses-sdk android:minSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="PFRPGCharacterSheet"
        android:allowBackup="true"
        android:icon="@drawable/licon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".CharacterSheetActivity"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".ModValueEditActivity" />
        <activity
            android:name=".FeatEditActivity"
            android:label="@string/title_activity_feat_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSheetActivity" />
        </activity>
        <activity
            android:name=".CFeatEditActivity"
            android:label="@string/title_activity_cfeat_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSheetActivity" />
        </activity>
        <activity
            android:name=".SkillEditActivity"
            android:label="@string/title_activity_skill_edit" >
        </activity>
        <activity
            android:name=".ItemEditActivity"
            android:label="@string/title_activity_item_edit" >
        </activity>
        <activity android:name=".SaveEditActivity" >
        </activity>
        <activity
            android:name=".AttackEditActivity"
            android:label="@string/title_activity_attack_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSheetActivity" />
        </activity>
        <activity
            android:name=".ACEditActivity"
            android:label="@string/title_activity_acedit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.elteano.charactersheet.CharacterSheetActivity" />
        </activity>
        <activity
            android:name="org.elteano.charactersheet.SpellEditActivity"
            android:label="@string/title_activity_spell_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="CharacterSheetActivity" />
        </activity>
    </application>

</manifest>